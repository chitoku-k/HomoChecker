#!/usr/bin/env bash

export COMPOSE_PROJECT_NAME=homochecker-test
export COMPOSE_FILE=docker-compose.test.yml

DEPLOY_DIR=/srv/http/vhosts/homo.chitoku.jp/httpdocs

docker-compose up -d
docker-compose exec api vendor/bin/php-coveralls --root_dir=/var/www/html

if [[ "$TRAVIS_BRANCH" = "master" ]] && [[ "$TRAVIS_PULL_REQUEST" = "false" ]]; then
    echo 'Downloading...'
    rsync -z deploy:$DEPLOY_DIR/client/dist/atlan.* client/dist
    echo 'Downloaded!'

    echo 'Uploading...'
    rsync -rz --delete --exclude 'ssh.tar' --exclude '.git' ./ deploy:$DEPLOY_DIR 2> /dev/null
    echo 'Uploaded!'
fi
