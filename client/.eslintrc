{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": [
    "riot"
  ],
  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "no-cond-assign": [2, "except-parens"],
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-character-class": 2,
    "no-ex-assign": 2,
    "no-extra-semi": 2,
    "no-invalid-regexp": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "use-isnan": 2,
    "no-unexpected-multiline": 2,
    "curly": [2, "all"],
    "default-case": 2,
    "eqeqeq": [2, "allow-null"],
    "no-caller": 2,
    "no-else-return": 2,
    "no-eval": 2,
    "no-fallthrough": 2,
    "no-octal-escape": 2,
    "no-octal": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-with": 2,
    "yoda": [2, "never", {"exceptRange": true}],
    "array-bracket-spacing": [2, "always", {}],
    "brace-style": [2, "1tbs", {}],
    "camelcase": [2, {"properties": "never"}],
    "comma-spacing": [2, {"after": true}],
    "computed-property-spacing": [2, "never"],
    "indent": [2, 4, {"SwitchCase": 1}],
    "keyword-spacing": 2,
    "new-parens": 2,
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "no-trailing-spaces": [2, {"skipBlankLines": false}],
    "no-underscore-dangle": 2,
    "padded-blocks": [2, "never"],
    "semi-spacing": [2, {"after": true}],
    "semi": [2, "always"],
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "space-unary-ops": [2, {"words": true, "nonwords": false}],
    "arrow-spacing": [2, {"before": true, "after": true}],
    "constructor-super": 2,
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-this-before-super": 1,
    "no-var": 1,
    "prefer-const": 1,
    "prefer-spread": 1
  }
}
