{
    "require": {
        "guzzlehttp/guzzle": "^7.2",
        "guzzlehttp/oauth-subscriber": "^0.4.0",
        "illuminate/cache": "^8.18",
        "illuminate/config": "^8.18",
        "illuminate/container": "^8.18",
        "illuminate/database": "^8.18",
        "illuminate/events": "^8.18",
        "illuminate/log": "^8.18",
        "illuminate/redis": "^8.18",
        "illuminate/support": "^8.18",
        "middlewares/access-log": "^2.0",
        "phpoption/phpoption": "^1.7",
        "slim/http": "^1.2",
        "slim/psr7": "^1.3",
        "slim/slim": "^4.7",
        "true/punycode": "~2.0",
        "vlucas/phpdotenv": "^5.2"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "mockery/mockery": "^1.4",
        "php-coveralls/php-coveralls": "^2.4",
        "phpunit/phpunit": "^9"
    },
    "suggest": {
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "HomoChecker\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HomoChecker\\Test\\": "./tests/Case/"
        }
    },
    "scripts": {
        "test": "phpdbg -qrr $(which phpunit)",
        "coveralls": "coveralls",
        "fix": "php-cs-fixer fix",
        "post-install-cmd": "[ \"$COMPOSER_DEV_MODE\" = 0 ] || cghooks add --ignore-lock",
        "post-update-cmd": "[ \"$COMPOSER_DEV_MODE\" = 0 ] || cghooks update"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "git diff-index --cached --name-only HEAD | php-cs-fixer fix --config api/.php_cs.dist",
                "git update-index --again"
            ]
        }
    }
}
