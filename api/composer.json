{
    "name": "chitoku-k/homochecker",
    "description": "HomoChecker API",
    "require": {
        "guzzlehttp/guzzle": "^7.10.0",
        "illuminate/config": "^12.42.0",
        "illuminate/database": "^12.42.0",
        "illuminate/events": "^12.42.0",
        "illuminate/http": "^12.42.0",
        "illuminate/log": "^12.42.0",
        "middlewares/access-log": "^2.2.0",
        "phpoption/phpoption": "^1.9.4",
        "promphp/prometheus_client_php": "^2.14.1",
        "slim/http": "^1.4.0",
        "slim/psr7": "^1.8.0",
        "slim/slim": "^4.15.1",
        "vlucas/phpdotenv": "^5.6.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92.3",
        "mockery/mockery": "^1.6.12",
        "phpunit/phpunit": "^12.5.3",
        "psalm/phar": "^6.14.1"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php83": "*",
        "symfony/polyfill-php84": "*",
        "symfony/polyfill-php85": "*"
    },
    "autoload": {
        "psr-4": {
            "HomoChecker\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HomoChecker\\Test\\": "./tests/Case/"
        }
    },
    "scripts": {
        "psalm": "psalm.phar",
        "test": "phpunit",
        "fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    }
}
