{
    "name": "chitoku-k/homochecker",
    "description": "HomoChecker API",
    "require": {
        "guzzlehttp/guzzle": "^7.9.3",
        "illuminate/config": "^12.3.0",
        "illuminate/database": "^12.3.0",
        "illuminate/events": "^12.3.0",
        "illuminate/log": "^12.3.0",
        "middlewares/access-log": "^2.2.0",
        "phpoption/phpoption": "^1.9.3",
        "promphp/prometheus_client_php": "^2.14.0",
        "slim/http": "^1.4.0",
        "slim/psr7": "^1.7.0",
        "slim/slim": "^4.14.0",
        "vlucas/phpdotenv": "^5.6.1"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^3.0.0",
        "friendsofphp/php-cs-fixer": "^3.74.0",
        "mockery/mockery": "^1.6.12",
        "php-coveralls/php-coveralls": "^2.7.0",
        "phpunit/phpunit": "^12.0.10",
        "psalm/phar": "^6.9.6"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php83": "*"
    },
    "autoload": {
        "psr-4": {
            "HomoChecker\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HomoChecker\\Test\\": "./tests/Case/"
        }
    },
    "scripts": {
        "psalm": "psalm.phar",
        "test": "phpunit",
        "fix": "php-cs-fixer fix",
        "post-install-cmd": "[ \"$COMPOSER_DEV_MODE\" = 0 ] || cghooks add --ignore-lock",
        "post-update-cmd": "[ \"$COMPOSER_DEV_MODE\" = 0 ] || cghooks update"
    },
    "config": {
        "platform": {
            "php": "8.4"
        },
        "sort-packages": true
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "git diff-index --cached --name-only HEAD | (cd api && composer fix)",
                "git update-index --again"
            ]
        }
    }
}
